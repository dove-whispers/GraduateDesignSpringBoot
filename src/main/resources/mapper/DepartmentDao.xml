<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dove.dao.DepartmentDao">

    <resultMap type="com.dove.entity.Department" id="DepartmentMap">
        <result property="depId" column="dep_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DepartmentMap">
        select dep_id,
               name,
               address,
               status
        from department
        where dep_id = #{depId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DepartmentMap">
        select
        dep_id, name, address, status
        from department
        <where>
            <if test="depId != null">
                and dep_id = #{depId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from department
        <where>
            <if test="depId != null">
                and dep_id = #{depId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="depId" useGeneratedKeys="true">
        insert into department(name, address, status)
        values (#{name}, #{address}, #{status})
    </insert>

    <insert id="insertBatch" keyProperty="depId" useGeneratedKeys="true">
        insert into department(name, address, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.address}, #{entity.status})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="depId" useGeneratedKeys="true">
        insert into department(name, address, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.address}, #{entity.status})
        </foreach>
        on duplicate key update
        name = values(name),
        address = values(address),
        status = values(status)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update department
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where dep_id = #{depId}
    </update>

    <select id="queryPageList" resultType="com.dove.dto.responseDTO.DepartmentListResponseDTO" parameterType="com.dove.dto.requestDTO.DepartmentListRequestDTO">
        SELECT dep_id, name, address, status
        FROM department
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%',#{name}'%')
            </if>
            <if test="address != null and address != ''">
                AND address LIKE CONCAT('%',#{address}'%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>

    <update id="updateFailureStatusById">
        UPDATE department
        SET status = 0
        WHERE dep_id = #{depId}
    </update>

    <update id="updateSuccessStatusById">
        UPDATE department
        SET status = 1
        WHERE dep_id = #{depId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from department
        where dep_id = #{depId}
    </delete>

</mapper>

