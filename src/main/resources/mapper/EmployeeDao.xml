<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dove.dao.EmployeeDao">

    <resultMap type="com.dove.entity.Employee" id="EmployeeMap">
        <result property="emId" column="em_id" jdbcType="INTEGER"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="loginName" column="login_name" jdbcType="VARCHAR"/>
        <result property="depId" column="dep_id" jdbcType="INTEGER"/>
        <result property="positionId" column="position_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>
    <resultMap type="com.dove.dto.EmployeeDTO" id="UserInfoMap">
        <result property="emId" column="em_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="loginName" column="login_name" jdbcType="VARCHAR"/>
        <result property="depId" column="dep_id" jdbcType="INTEGER"/>
        <result property="positionId" column="position_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <association property="department" javaType="com.dove.entity.Department" column="dep_id"
                     select="com.dove.dao.DepartmentDao.queryById"
                     jdbcType="INTEGER"/>
        <association property="position" javaType="com.dove.entity.Position" column="position_id"
                     select="com.dove.dao.PositionDao.queryById"
                     jdbcType="INTEGER"/>
    </resultMap>

    <!--新增所有列-->
    <insert id="insert" keyProperty="emId" useGeneratedKeys="true">
        INSERT INTO employee (password, name, login_name, dep_id, position_id, status)
        VALUES (#{password}, #{name}, #{loginName}, #{depId}, #{positionId}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        UPDATE employee
        <set>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="loginName != null and loginName != ''">
                login_name = #{loginName},
            </if>
            <if test="depId != null">
                dep_id = #{depId},
            </if>
            <if test="positionId != null">
                position_id = #{positionId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        WHERE em_id = #{emId}
    </update>

    <!--查询单个-->
    <select id="queryById" resultMap="EmployeeMap">
        SELECT em_id, password, name, login_name, dep_id, position_id, status
        FROM employee
        WHERE em_id = #{emId}
    </select>

    <select id="queryEmInfoByUserNameAndPassword" resultMap="UserInfoMap">
        SELECT em_id,
               password,
               name,
               login_name,
               dep_id,
               position_id,
               status
        FROM employee
        WHERE login_name = #{userName}
          AND password = #{password}
    </select>

    <!-- 条件查询(包括MybatisPlus分页查询) -->
    <select id="queryPageList" resultMap="UserInfoMap">
        SELECT em_id,
               password,
               name,
               login_name,
               dep_id,
               position_id,
               status
        FROM employee ${ew.customSqlSegment}
    </select>

    <update id="updateFailureStatusById">
        UPDATE employee
        SET status = 0
        WHERE em_id = #{emId}
    </update>

    <update id="updateSuccessStatusById">
        UPDATE employee
        SET status = 1
        WHERE em_id = #{emId}
    </update>
</mapper>

